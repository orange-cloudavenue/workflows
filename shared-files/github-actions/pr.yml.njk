{% include '../common/header.yml.tmpl' %}

name: PR All events

on:
  pull_request_target:
    types: [ opened, reopened, synchronize, edited ]


concurrency:
  {#- raw is used to avoid conflicts with the templating engine and github action #}
  group: {% raw %}${{ github.ref }}-${{ github.head_ref }}-pr-all{% endraw %}
  cancel-in-progress: true

permissions:
  contents: write
  pull-requests: write

jobs:
  changelog-dependabot:
    name: "Changelog Dependabot"
    uses: orange-cloudavenue/workflows/.github/workflows/changelog_dependabot.yml@main
    secrets:
      {#- raw is used to avoid conflicts with the templating engine and github action #}
      TOKEN: {% raw %}${{ secrets.GITHUB_TOKEN }}{% endraw %}

  {# changelog-validation:
    name: "Changelog Validation"
    uses: orange-cloudavenue/workflows/.github/workflows/changelog_validation.yml@main
    secrets:
      {#- raw is used to avoid conflicts with the templating engine and github action #}
      {#TOKEN: {% raw %}${{ secrets.GITHUB_TOKEN }}{% endraw %} #}

  pr-size:
    if: event.type != 'edited'
    name: "PR Size"
    uses: orange-cloudavenue/workflows/.github/workflows/pr_label_size.yml@main
    with:
      ref: {% raw %}${{ github.ref }}{% endraw %}
      repository: {% raw %}${{ github.repository }}{% endraw %}
    secrets:
      {#- raw is used to avoid conflicts with the templating engine and github action #}
      TOKEN: {% raw %}${{ secrets.CHANGELOG_PAT }}{% endraw %}

  pr-conventional-commits:
    if: event.type == 'opened' || event.type == 'edited'
    name: "Conventional Commits"
    uses: orange-cloudavenue/workflows/.github/workflows/pr_conventional_commits.yml@main
    secrets:
      {#- raw is used to avoid conflicts with the templating engine and github action #}
      TOKEN: {% raw %}${{ secrets.CHANGELOG_PAT }}{% endraw %}

  pr-license:
    if: event.type != 'edited' && github.event.pull_request.draft == false
    name: "License Check"
    uses: orange-cloudavenue/workflows/.github/workflows/pr_license.yml@main
    with:
      ref: {% raw %}${{ github.ref }}{% endraw %}
      repository: {% raw %}${{ github.repository }}{% endraw %}

{% if golang %}
  golang-ci-lint:
    if: event.type != 'edited' && github.event.pull_request.draft == false
    name: "Lint"
    uses: orange-cloudavenue/workflows/.github/workflows/go_golangci-lint.yml@main
    with:
      ref: {% raw %}${{ github.ref }}{% endraw %}
      repository: {% raw %}${{ github.repository }}{% endraw %}

  tests:
    if: event.type != 'edited' && github.event.pull_request.draft == false
    {% if terraform_provider %}
    name: "Unit Tests"
    uses: orange-cloudavenue/workflows/.github/workflows/go_unit-test-tf-provider.yml@main
    with:
      ref: {% raw %}${{ github.ref }}{% endraw %}
      repository: {% raw %}${{ github.repository }}{% endraw %}
    secrets:
      CLOUDAVENUE_ORG: {% raw %}${{ secrets.CLOUDAVENUE_ORG }}{% endraw %}
      CLOUDAVENUE_USER: {% raw %}${{ secrets.CLOUDAVENUE_USER }}{% endraw %}
      CLOUDAVENUE_PASSWORD: {% raw %}${{ secrets.CLOUDAVENUE_PASSWORD }}{% endraw %}
      CLOUDAVENUE_VDC: {% raw %}${{ secrets.CLOUDAVENUE_VDC }}{% endraw %}
    {% else %}
    name: "Unit Tests"
    uses: orange-cloudavenue/workflows/.github/workflows/go_unit-test.yml@main
    with:
      ref: {% raw %}${{ github.ref }}{% endraw %}
      repository: {% raw %}${{ github.repository }}{% endraw %}
    {% if repo.name == 'cloudavenue-sdk-go-v2' %}
      send-coverage: true
    {% endif %}
    {% endif %}
{% endif %}